---
import { Image } from 'astro:assets';
import GgExternal from '~icons/gg/external'
---

<section class="wrapper">
	<div class="icon-year">
		<Image src="https://www.kalwabed.xyz/favicon.ico" alt="kalwabed.xyz favicon" width={22} height={22}  />
		<b>2023</b>
	</div>
	<a class="link-title" href="/projects/412">Tuantanah</a>
	<p>I have recently been made aware that the frequency.</p>
	<div class="links">
		<a href='/projects/123'>Write-up</a>
		<a href='/projects/123' target="_blank" rel="noopener noreferrer">Demo <GgExternal /></a>
	</div>
</section>

<style lang="scss">
	@use '../styles/breakpoints' as br;
	$small: 0.75rem;

	.wrapper {
		display: flex;
		flex-direction: column;
		max-width: 100%;

		@include br.desktop {
			max-width: 20rem;
		}
	}
	
	.link-title {
		font-size: 1.5rem;
		font-family: var(--font-heading);
		font-weight: 600;
		line-height: 1.625;
	}

	p {
		color: var(--fc-subtle);
	}

	.icon-year {
		display: inline-flex;
		gap: 8px;
		align-items: center;

		& b {
			font-size: $small;
		}
	}

	.links {
		display: flex;
		gap: 1rem;
		align-items: center;
		margin-top: 1rem;
	}

	a {
		color: var(--fc-primary);
		text-decoration: none;
		display: inline-flex;
		align-items: start;
		gap: 2px;
		font-size: $small;

		&:hover {
			text-decoration: underline;
		}
	}
</style>
