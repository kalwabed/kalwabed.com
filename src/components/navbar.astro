---
import { Image } from 'astro:assets';
import GgMenu from '~icons/gg/menu'
import logo from '~/assets/logo.svg';

const isHomepage = Astro.url.pathname === '/'
---

<nav class={`container ${isHomepage ? 'home' : ''}`}>
  <a href="/">
    <Image src={logo} alt="kalwabed.xyz letter logo" />
  </a>
  <ul>
    <li>
      <a href="/about">About</a>
    </li>
    <li>
      <a href="/projects">Projects</a>
    </li>
    <li>
      <a href="/blog">Blog</a>
    </li>
    <li>
      <a href="/uses">Uses</a>
    </li>
  </ul>
</nav>

<style lang="scss">
@use '../styles/breakpoints' as br;

.container {
  display: flex;
  flex-direction: column;
  max-width: 968px;
  width: 100%;
  margin-top: 2.19rem;
  padding: {
    top: 1rem;
    right: 1rem;
    left: 1rem;
  }

  &.home {
    justify-content: center;
  }

  @include br.tablet {
    padding: 0;
  }
}

a {
  color: var(--fc-primary);
  text-decoration: none;
  display: inline-flex;
  align-items: center;

  &:hover {
    text-decoration: underline;
  }
}

ul {
  display: flex;
  margin: {
    top: 1rem;
    bottom: 1rem;
  };
  gap: 1.3rem;
}

li {
  list-style: none;
}
</style>
