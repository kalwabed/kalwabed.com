---
import { Image } from 'astro:assets';
import logo from '~/assets/logo.svg';

const isHomepage = Astro.url.pathname === '/'
---

<nav class={`container ${isHomepage ? 'home' : ''}`}>
  <a href="/" aria-label="Link to home page">
    <Image src={logo} alt="kalwabed.xyz letter logo" />
  </a>
  <ul>
    <li>
      <a href="/about">About</a>
    </li>
    <li>
      <a href="/projects">Projects</a>
    </li>
    <li>
      <a href="/blog">Blog</a>
    </li>
    <li>
      <a href="/uses">Uses</a>
    </li>
  </ul>
</nav>

<style lang="scss">
@use '../styles/breakpoints' as br;

.container {
  position: relative;
  z-index: 15;
  display: flex;
  flex-direction: column;
  max-width: var(--over-mw);
  width: 100%;
  margin-top: 2.19rem;
  padding: 0 1rem;

  @include br.desktop {
    padding: 0;
  }
}

a {
  color: var(--fc-primary);
  text-decoration: none;
  width: fit-content;

  &:has(> img) {
    &:focus {
      outline: none;
    }
  }
}

ul {
  display: flex;
  align-items: center;
  margin: {
    top: 1rem;
    bottom: 1rem;
  };
  gap: 1rem;
}

li {
  list-style: none;

  a {
    padding: {
      top: .2rem;
      left: .3rem;
      right: .3rem;
    };
    transition-property: color, background;
    transition-duration: .1s;
    transition-timing-function: ease;
    &:hover {
      color: white;
      background-color: var(--iris-10);
    }

    &:focus {
      outline: 2px solid var(--iris-7);
    }
  }
}
</style>
