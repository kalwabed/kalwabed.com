---
const props = Astro.props as { src: string, alt: string }
---

<figure>
  <img {...props} width="400" height="250" decoding="async" loading="lazy" />
  <figcaption>{props.alt}</figcaption>
</figure>

<style lang="scss">
@use '../../styles/breakpoints' as br;

figure {
  margin-bottom: 1rem;
}

img {
  height: auto;
  width: 100%;
  background: var(--slate-3);
  border: 1px solid var(--slate-6);

  @include br.tablet {
    margin: 0 -10vw;
    width: calc(100% + 20vw);
    max-width: none;
  }
}

figcaption {
  text-align: center;
  font-size: 14px;
  color: var(--fc-subtle);
}
</style>
